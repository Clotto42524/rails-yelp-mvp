<h1>All Restaurants</h1>

<div class="cards">
  <% @restaurants.each do |restaurant| %>
  <div class="card" style="width: 18rem;">
    <div class="card-body">
      <h5 class="card-title"><%= restaurant.name %></h5>
      <a href="#" class="card-link"><%= link_to "See reviews", restaurant_path(restaurant) %></a>
    </div>
  </div>
  <% end %>
</div>
<hr>
<%= link_to "Create a new restaurant", new_restaurant_path, class: "btn btn-primary" %>
